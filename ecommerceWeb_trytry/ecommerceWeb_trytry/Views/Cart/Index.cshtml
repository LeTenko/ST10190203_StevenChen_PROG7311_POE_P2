@model ecommerceWeb_trytry.Models.Cart

@{
    ViewData["Title"] = "Cart";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #fefae0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
            margin: 0;
           
        }

        .content-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 900px;
            margin: 20px auto;
        }

        h3 {
            text-align: center;
            color: #D4AF37;
            font-weight: bold;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            padding: 12px;
            text-align: left;
        }

        th {
            background-color: #D4AF37;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        button {
            background-color: #D4AF37;
            border: none;
            color: #fff;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #b8860b;
            }

        .btn-primary {
            background-color: #007bff;
            color: #fff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .total-row {
            font-weight: bold;
            background-color: #f1f1f1;
        }

        .empty-cart {
            text-align: center;
            font-size: 1.2em;
            color: #D4AF37;
        }
    </style>
</head>
<body>
    <div class="content-container">
        <h3>Cart</h3>

        @if (Model.Items.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Cost</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.product.ProductName</td>
                            <td>@item.Quantity</td>
                            <td>@item.product.ProductPrice.ToString("C")</td>
                            <td>@(Math.Round(item.Cost, 2).ToString("C"))</td> <!-- Display the cost in currency format -->
                            <td>
                                <form action="/Cart/Remove" method="post">
                                    <input type="hidden" name="productId" value="@item.product.ProductId" />
                                    <button type="submit" class="btn btn-danger">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="3" class="text-right">Total Cost:</td>
                        <td>@(Math.Round(Model.TotalCost, 2).ToString("C"))</td> <!-- Display the total cost in currency format -->
                        <td></td>
                    </tr>
                </tfoot>
            </table>

            <form asp-controller="Products" asp-action="Index" method="get">
                <button type="submit" class="btn btn-primary">Edit Products (Start Again)</button>
            </form>
        }
        else
        {
            <p class="empty-cart">Your cart is currently empty.</p>
        }
    </div>

    @section Scripts {
        <script src="~/js/Cart.js"></script>
    }
</body>
</html>