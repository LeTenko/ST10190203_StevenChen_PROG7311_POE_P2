@model ecommerceWeb_trytry.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Your Site Name</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f3e6; /* Light beige background */
        }

        .form-container {
            background-color: #fffaf0; /* Light brown background */
            padding: 40px;
            margin-top: 50px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            color: #8b4513; /* SaddleBrown color for headings */
        }

        .form-container .btn-primary {
            background-color: #8b4513; /* SaddleBrown color for buttons */
            border-color: #8b4513;
        }

        .form-container .btn-primary:hover {
            background-color: #a0522d; /* Slightly darker brown on hover */
            border-color: #a0522d;
        }

        .form-container label {
            color: #8b4513; /* SaddleBrown color for labels */
        }

        .form-container a {
            color: #8b4513; /* SaddleBrown color for links */
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 form-container">
                <h1 class="text-center">Create Product</h1>
                <hr />
                <form asp-action="Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductImage" class="control-label"></label>
                        <input type="file" asp-for="ProductImage" class="form-control-file" />
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductType" class="control-label"></label>
                        <input asp-for="ProductType" class="form-control" />
                        <span asp-validation-for="ProductType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductDescription" class="control-label"></label>
                        <textarea asp-for="ProductDescription" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductProduceTime" class="control-label"></label>
                        <input asp-for="ProductProduceTime" class="form-control" />
                        <span asp-validation-for="ProductProduceTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Create" class="btn btn-primary btn-lg" />
                    </div>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>